<cluster>
        <enabled>yes</enabled>
        <cluster-id>{{ cluster_id }}</cluster-id>
        <description>{{ ha_cluster_description }}</description>
        <cluster-members>
          <entry name="{{ device }}">
            <ha4-ip-address>{{ ha4ipaddress }}</ha4-ip-address>
            <session-synchronization>enabled</session-synchronization>
            <ha4-backup-ip-address>{{ ha4backupipaddress }}</ha4-backup-ip-address>
            <comments>{{ha_comments}}</comments>
          </entry>
        </cluster-members>
      </cluster>